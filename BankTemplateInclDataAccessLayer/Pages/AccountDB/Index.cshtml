@page
@model BankApp.Pages.AccountDB.IndexModel



<div class="card">
    <div class="card-header">
        <h1>All Accounts</h1>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>Account number</th>
                <th>Balance</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var acc in Model.Accounts)
            {
                <tr>
                    <td>@acc.AccountId</td>
                    <td>@acc.Balance</td>
                    <td>
                        <a asp-page="AccountImage" asp-route-accountId="@acc.AccountId" asp-route-pageSize="10" class="btn btn-primary">View</a>
                    </td>
                    <td>
                        <a asp-page="Withdraw" asp-route-accountId="@acc.AccountId" class="btn btn-primary"><i class="fas fa-minus-circle"></i>Withdraw</a>
                    </td>
                    <td>
                        <a asp-page="Deposit" asp-route-accountId="@acc.AccountId" class="btn btn-primary"><i class="fas fa-plus-circle"></i>Deposit</a>
                    </td>

                </tr>
            }

            <tr>
                <td>
                    @if (Model.PageNo != 1)
                    {
                        <a class="btn btn-secondary"
                           asp-page="/AccountDB/Index"
                           asp-route-pageNo="@(Model.PageNo-1)">
                            Prev
                        </a>
                    }
                </td>


                <td colspan="2">
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                        <a class="btn @(Model.PageNo == i ? "btn-primary" : "btn-secondary")"
                           asp-page="/AccountDB/Index"
                           asp-route-pageNo="@i">
                            @i
                        </a>
                    }
                </td>


                <td>
                    @if (Model.PageNo != Model.PageCount)
                    {
                        <a class="btn btn-secondary"
                           asp-page="/AccountDB/Index"
                           asp-route-pageNo="@(Model.PageNo + 1)">
                            Next
                        </a>
                    }
                </td>


            </tr>
        </table>
    </div>
</div>
