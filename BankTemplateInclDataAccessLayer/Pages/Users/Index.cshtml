@page
@model BankApp.Pages.Users.IndexModel
@{
    var successMessage = TempData["Message"]?.ToString();
}

<div class="card">
    <div class="card-header">
        <h1>All Users</h1>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(successMessage))
        {
            <div class="alert alert-success" role="alert">
                <i class="bi bi-check-circle"></i>
                @successMessage
            </div>
        }

        <a class="btn btn-primary btn-split"
           asp-area="Identity"
           asp-page="/Account/Register">
            <span class="icon">
                <i class='bx bxs-user-plus'></i>
            </span>
            <span class="text">
                Register New User
            </span>
        </a>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Roles
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <th>
                            @foreach (var role in user.Roles)
                            {
                                @role
                            }
                        </th>
                        <td>
                            <a class="btn btn-primary btn-split"
                               asp-page="UserImage"
                               asp-route-userId="@user.Id">
                                <span class="icon">
                                    <i class="fa-solid fa-user"></i>
                                </span>
                                <span class="text">
                                    View
                                </span>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-success btn-split"
                               asp-page="Edit"
                               asp-route-userId="@user.Id">
                                <span class="icon">
                                    <i class="fa-solid fa-user-pen"></i>
                                </span>
                                <span class="text">
                                    Edit
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
